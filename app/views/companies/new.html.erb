<div class="container d-flex justify-content-center align-items-center" style="height: 100vh;">
  <div class="card border-secondary">
    <div class="card-body">
      <h1 class="card-title">Create New Company</h1>

      <%= form_with(model: @company, url: companies_path) do |form| %>
        <div class="form-group">
          <%= form.label :name %>
          <%= form.text_field :name, class: 'form-control' %>
          <% if @company.errors.has_key?(:name) %>
            <p class="text-danger"><%= @company.errors.full_messages_for(:name).first %></p>
          <% end %>
        </div>

        <div class="form-group">
          <%= form.label :address %>
          <%= form.text_field :address, class: 'form-control' %>
          <% if @company.errors.has_key?(:address) %>
            <p class="text-danger"><%= @company.errors.full_messages_for(:address).first %></p>
          <% end %>
        </div>

        <div class="form-group">
          <%= form.label :latitude %>
          <%= form.text_field :latitude, class: 'form-control' %>
          <% if @company.errors.has_key?(:latitude) %>
            <p class="text-danger"><%= @company.errors.full_messages_for(:latitude).first %></p>
          <% end %>
        </div>

        <div class="form-group">
          <%= form.label :longitude %>
          <%= form.text_field :longitude, class: 'form-control' %>
          <% if @company.errors.has_key?(:longitude) %>
            <p class="text-danger"><%= @company.errors.full_messages_for(:longitude).first %></p>
          <% end %>
        </div>
        <div class="d-flex">
          <%= form.submit 'Create', class: 'btn btn-primary mt-3 mr-5' %>
          <%= link_to 'Back', companies_path, class: 'btn btn-secondary mt-3' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
