<div class="container">
  <h1 class="mt-4 mb-4">Food Category Details</h1>

  <div class="card">
    <div class="card-body">
      <h5 class="card-title">Name: <%= @food_category.name %></h5>
      <p class="card-text">ID: <%= @food_category.id %></p>
    </div>
  </div>

  <div class="mt-4">
    <%= link_to 'Edit', edit_food_category_path(@food_category), class: 'btn btn-primary' %>
    <%= link_to 'Delete', food_category_path(@food_category), method: :delete, data: { confirm: 'Are you sure you want to delete this food category?' }, class: 'btn btn-danger' %>
    <%= link_to 'Back', food_categories_path, class: 'btn btn-secondary' %>
  </div>
</div>
