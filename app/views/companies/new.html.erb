<div class="container d-flex justify-content-center align-items-center" style="height: 100vh;">
  <div class="card border-secondary">
    <div class="card-body">
      <h1 class="card-title">Create New Company</h1>

      <%= form_with(model: @company, url: companies_path) do |form| %>
        <div class="form-group">
          <%= form.label :name %>
          <%= form.text_field :name, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :address %>
          <%= form.text_field :address, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :latitude %>
          <%= form.text_field :latitude, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :longitude %>
          <%= form.text_field :longitude, class: 'form-control' %>
        </div>

        <%= form.submit 'Create', class: 'btn btn-primary mt-3' %>
      <% end %>
    </div>
  </div>
</div>
