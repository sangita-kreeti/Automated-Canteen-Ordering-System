<div class="container mt-5">
  <div class="row mt-4">
    <div class="col-md-12">
      <div class="card border-primary">
        <div class="card-body">
          <h3 class="card-title text-center mb-4">Food Order Status Management</h3>
          <% if @orders.any? %>
            <div class="table-responsive">
              <table class="table table-bordered table-hover">
                <thead class="table-primary">
                  <tr>
                    <th>Order ID</th>
                    <th>Company Name</th>
                    <th>Food Store</th>
                    <th>Food Items</th>
                    <th>Quantities</th>
                    <th>Price</th>
                    <th>Status</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody>
                  <% @orders.each do |order| %>
                    <% food_store_match = current_user.chef? && order.food_store_name.include?(current_user.food_store.name) %>
                    <% if order.status == 'placed' && current_user.admin? %>
                      <tr>
                        <td><%= order.id %></td>
                        <td><%= order.company_name.nil? ? 'Other' : order.company_name %></td>
                        <td><%= order.food_store_name %></td>
                        <td><%= order.food_item_names.join(", ") %></td>
                        <td><%= order.quantities.join(", ") %></td>
                        <td><%= order.prices.join(", ") %></td>
                        <td><%= order.status %></td>
                        <td><%= link_to 'Approve', approved_order_path(order), method: :patch, class: 'btn btn-success btn-sm' %></td>
                      </tr>
                    <% elsif (order.status == 'approved' || order.status == 'preparing' || order.status == 'finished' || order.status == 'delivered') && (current_user.admin? || food_store_match) %>
                      <tr>
                        <td><%= order.id %></td>
                        <td><%= order.company_name.nil? ? 'Other' : order.company_name %></td>
                        <td><%= order.food_store_name %></td>
                        <td><%= order.food_item_names.join(", ") %></td>
                        <td><%= order.quantities.join(", ") %></td>
                        <td><%= order.prices.join(", ") %></td>
                        <td><%= order.status %></td>
                        <td>
                          <% if order.status == 'approved' %>
                            <%= link_to 'Preparing', preparing_order_path(order), method: :patch, class: 'btn btn-success btn-sm' %>
                          <% elsif order.status == 'preparing' %>
                            <%= link_to 'Finished', finished_order_path(order), method: :patch, class: 'btn btn-success btn-sm' %>
                          <% elsif order.status == 'finished' %>
                            <%= link_to 'Delivered', delivered_order_path(order), method: :patch, class: 'btn btn-success btn-sm' %>
                          <% else %>
                            <button class="btn btn-sm btn-success" disabled>Not Available</button>
                          <% end %>
                        </td>
                      </tr>
                    <% end %>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <p class="text-center">No orders available.</p>
          <% end %>
        </div>
      </div>
      <div class="mt-3 text-center">
        <% if current_user.role == 'admin' %>
          <%= link_to admin_dashboard_path, class: 'btn btn-secondary' do %>
            <i class="bi bi-house-fill"></i> Back to Admin Dashboard
          <% end %>
        <% elsif current_user.role == 'chef' %>
          <%= link_to chef_dashboard_index_path, class: 'btn btn-secondary' do %>
            <i class="bi bi-house-fill"></i> Back to Chef Dashboard
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="text-center mt-3 mb-3">
  <div class="btn-group" role="group">
    <% if page > 1 %>
      <%= link_to "Previous", order_status_path(page: page - 1), class: 'btn btn-outline-dark' %>
    <% end %>

    <% (1..total_pages).each do |p| %>
      <%= link_to p, order_status_path(page: p), class: p == page ? 'btn btn-dark' : 'btn btn-outline-dark' %>
    <% end %>

    <% if page < total_pages %>
      <%= link_to "Next", order_status_path(page: page + 1), class: 'btn btn-outline-dark' %>
    <% end %>
  </div>
</div>
