<div class="container mt-5">
  <div class="row mt-4">
    <div class="col-md-12">
      <div class="card border-primary">
        <div class="card-body">
          <h3 class="card-title text-center mb-4">Food Order Status Management</h3>
          <% if @orders.any? %>
            <div class="table-responsive">
              <table class="table table-bordered table-hover">
                <thead class="table-primary">
                  <tr>
                    <th>Order ID</th>
                    <th>Company Name</th>
                    <th>Food Items</th>
                    <th>Quantities</th>
                    <th>Price</th>
                    <th>Status</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody>
                  <% @orders.each do |order| %>
                    <tr>
                      <td><%= order.id %></td>
                      <td><%= order.company_name.nil? ? 'Other' : order.company_name %></td>
                      <td><%= order.food_item_names.join(", ") %></td>
                      <td><%= order.quantities.join(", ") %></td>
                      <td><%= order.prices.join(", ") %></td>
                      <td><%= order.status %></td>
                      <td>
                        <div class="btn-group" role="group">
                          <%= button_to 'Approved', method: :patch, class: 'btn btn-success btn-sm' do %>
                            <i class="bi bi-check-lg"></i> Approved
                          <% end %>
                          <%= button_to 'Preparing', method: :patch, class: 'btn btn-warning btn-sm' do %>
                            <i class="bi bi-hourglass-split"></i> Preparing
                          <% end %>
                          <%= button_to 'Finished', method: :patch, class: 'btn btn-info btn-sm' do %>
                            <i class="bi bi-check2-all"></i> Finished
                          <% end %>
                          <%= button_to 'Delivered', method: :patch, class: 'btn btn-primary btn-sm' do %>
                            <i class="bi bi-truck"></i> Delivered
                          <% end %>
                        </div>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <p class="text-center">No orders available.</p>
          <% end %>
        </div>
      </div>
      <div class="mt-3 text-center">
        <%= link_to admin_dashboard_path, class: 'btn btn-secondary' do %>
          <i class="bi bi-house-fill"></i> Back to Admin Dashboard
        <% end %>
      </div>
    </div>
  </div>
</div>
