<div class="container">
  <h1 class="mt-4 mb-4">New Food Category</h1>

  <%= form_for @food_category, url: food_categories_path do |f| %>
    <div class="form-group">
      <%= f.label :name, class: 'form-label' %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class="text-center">
      <%= f.submit 'Create Food Category', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
