<div class="container mt-5">
   <div class="card border-primary">
      <div class="card-header text-center">
         <h1>Upload Food Photo</h1>
      </div>
      <div class="card-body">
         <%= form_with(model: @photo, url: photos_path, multipart: true) do |form| %>
         <div class="form-group">
            <%= form.label :image, 'Select an Image', class: 'h5' %>
            <%= form.file_field :image, class: 'form-control form-control-lg' %>
         </div>
         <div class="mt-3">
            <% flash.each do |type, message| %>
            <div class="alert alert-<%= type == 'notice' ? 'success' : 'danger' %> alert-dismissible fade show" role="alert">
               <% if type == 'alert' %>                
               <i class="bi bi-exclamation-circle-fill me-2"></i>
               <% else %>
               <i class="bi bi-check-circle-fill me-2"></i>
               <% end %>
               <%= message %>
               <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            <% end %>
         </div>
         <div class="d-flex justify-content-between mt-4">
            <%= form.submit 'Upload', class: 'btn btn-primary' %>
            <%= link_to 'Back to Photos', photos_path, class: 'btn btn-secondary' %>
         </div>
         <% end %>
      </div>
   </div>
</div>