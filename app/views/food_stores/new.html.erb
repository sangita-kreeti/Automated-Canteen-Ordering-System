<div class="container mt-4">
  <h1 class="text-center">Create New Food Store</h1>

  <div class="d-flex justify-content-center align-items-center" style="border: 2px solid #007BFF; height: 80vh; padding: 20px;">
    <%= form_with(model: @food_store, url: food_stores_path) do |form| %>
      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, class: 'form-control' %>
        <% if @food_store.errors.has_key?(:name) %>
          <p class="text-danger"><%= @food_store.errors.full_messages_for(:name).first %></p>
        <% end %>
      </div>

      <div class="form-group">
        <%= form.label :address %>
        <%= form.text_field :address, class: 'form-control' %>
        <% if @food_store.errors.has_key?(:address) %>
          <p class="text-danger"><%= @food_store.errors.full_messages_for(:address).first %></p>
        <% end %>
      </div>

      <div class="form-group">
        <%= form.label :latitude %>
        <%= form.text_field :latitude, class: 'form-control' %>
        <% if @food_store.errors.has_key?(:latitude) %>
          <p class="text-danger"><%= @food_store.errors.full_messages_for(:latitude).first %></p>
        <% end %>
      </div>

      <div class="form-group">
        <%= form.label :longitude %>
        <%= form.text_field :longitude, class: 'form-control' %>
        <% if @food_store.errors.has_key?(:longitude) %>
          <p class="text-danger"><%= @food_store.errors.full_messages_for(:longitude).first %></p>
        <% end %>
      </div>

      <div class="mt-3">
        <%= form.submit 'Create', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
