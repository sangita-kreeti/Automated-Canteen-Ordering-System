<div class="container mt-5">
   <div class="row justify-content-center">
      <div class="col-md-6 card shadow p-2">
         <h1 class="text-center">Edit Profile</h1>
         <%= form_for @user, url: user_path(@user), method: :put do |f| %>
                 
         <div class="form-group mb-4">
            <strong><%= f.label :name, class: "form-label required"%></strong>
            <%= f.text_field :name, class: "form-control", placeholder: "Enter your name" %>
            <% if @user.errors.has_key?(:name) %>
            <p class="text-danger"><%= @user.errors.full_messages_for(:name).first %></p>
            <% end %>
         </div>
         <div class="form-group mb-4">
            <strong><%= f.label :username, class: "form-label required" %></strong>
            <%= f.text_field :username, class: "form-control", placeholder: "Enter your username" %>
            <% if @user.errors.has_key?(:username) %>
               <p class="text-danger"><%= @user.errors.full_messages_for(:username).first %></p>
            <% end %>
         </div>
         <div class="form-group mb-4">
            <strong><%= f.label :phone_no, class: "form-label required"%></strong>
            <%= f.text_field :phone_no, class: "form-control", placeholder: "Enter your phone number" %>
            <% if @user.errors.has_key?(:phone_no) %>
            <p class="text-danger"><%= @user.errors.full_messages_for(:phone_no).first %></p>
            <% end %>
         </div>
         <div class="form-group mb-4">
            <strong><%= f.label :email, class: "form-label required"%></strong>
            <%= f.text_field :email, class: "form-control", placeholder: "Enter your email" %>
            <% if @user.errors.has_key?(:email) %>
               <p class="text-danger"><%= @user.errors.full_messages_for(:email).first %></p>
            <% end %>
         </div>         
         <div class="form-group mt-3 d-flex justify-content-between">
            <%= f.submit "Update Profile", class: "btn btn-primary" %>
            <% if current_user.employee? %>
               <%= link_to "Back to Dashboard", dashboard_employees_path, class: "btn btn-secondary" %>
            <% else current_user.chef? %>
               <%= link_to "Back to Dashboard", dashboard_chefs_path, class: "btn btn-secondary" %>
            <% end %>
         </div>
         <% end %>
      </div>
   </div>
</div>
